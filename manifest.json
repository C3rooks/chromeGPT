{
  "manifest_version": 2,
  "name": "ChatGPT Extension",
  "version": "1.0",
  "description": "A Chrome extension for using ChatGPT",
  "browser_action": {
    "default_popup": "src/popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "https://api.openai.com/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
